<div class="container">
    <div class="alert alert-secondary text-center">
        <h1>Alle News</h1>
    </div>

    <table class="table table-bordered">
        <thead class="bg-dark text-center">
            <tr class="text-white">
                <th>Titel</th>
                <th>Inhalt</th>
                <th>Status</th>
                <th>Kommentare erlaubt</th>
                <!--<th>Kategorie</th>-->
                <th>Aktionen</th>
            </tr>
        </thead>
        <tbody class="text-center">
        {{#each posts}}
            <tr>
                <td>{{title}}</td>
                <td>{{description}}</td>
                <td>{{status}}</td>
                <td>{{allowComments}}</td>
                <!--<td>{{category.title}}</td>-->
                <td class="d-flex">
                    <a href="/admin/posts/edit/{{_id}}" class="btn btn-sm btn-warning mr-2">Bearbeiten</a>
                    <form action="/admin/posts/delete/{{_id}}?newMethod=DELETE" method="post">
                        <button class="btn btn-sm btn-danger" type="submit">LÃ¶schen</button>
                    </form>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>