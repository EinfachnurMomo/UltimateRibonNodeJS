<div class="card card-login max-auto my-5">
    <div class="card-header">Login</div>
    <div class="card-body">
        <form action="/login" method="post">
            <div class="form-group">
                <label for="exampleInputEmail1">Email Addresse</label>
                <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Deine Email..">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Email Addresse</label>
                <input type="password" class="form-control" name="password" id="exampleInputPassword1" placeholder="Dein Passwort..">
            </div>
            <div class="form-group">
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox"> Passwort merken
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Einloggen</button>
        </form>
        <div class="text-center">
            <a class="d-block small mt-3" href="/register">Registrieren</a>
            <a class="d-block small" href="/forgot-password.html">Passwort vergessen?</a>
            <a class="d-block small" href="/">Home</a>
        </div>
    </div>
</div>